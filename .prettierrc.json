{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "none",
    "printWidth": 120,
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "singleQuote": false,
                "tabWidth": 4
            }
        }
    ]
}
