# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = auto
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,yml,yaml}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
